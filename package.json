{
  "name": "space-radar",
  "version": "5.0.0",
  "description": "Disk Usage Electron App",
  "main": "main.js",
  "scripts": {
    "format": "prettier app/js/*.js app/css/*.css --single-quote --no-semi --print-width=120 --write",
    "app": "cd app && npm run app",
    "debug": "cd app && npm run debug",
    "clean": "rm -rf SpaceRadar-darwin-x64",
    "build": "electron-packager app SpaceRadar --platform=darwin --arch=x64 --version=1.7.6 --version-string.CompanyName=zz85 --version-string.ProductName=SpaceRadar --icon=Icon.icns",
    "build:win": "electron-packager app SpaceRadar --platform=win32 --arch=x64 --version=1.7.6 --version-string.CompanyName=zz85 --version-string.ProductName=SpaceRadar --icon=Icon.icns",
    "build:linux": "electron-packager app SpaceRadar --platform=linux --arch=x64 --version=1.7.6 --version-string.CompanyName=zz85 --version-string.ProductName=SpaceRadar --icon=Icon.icns",
    "zip": "cd SpaceRadar-darwin-x64 && zip -ryX SpaceRadar-darwin-x64.zip SpaceRadar.app",
    "publish": "publish-release SpaceRadar-darwin-x64/SpaceRadar-darwin-x64.zip",
    "everything": "npm run clean && npm run build && npm run zip"
  },
  "keywords": [
    "Sunburst",
    "d3",
    "disk",
    "usage",
    "visualization"
  ],
  "author": "Joshua Koo",
  "license": "MIT",
  "devDependencies": {
    "electron-packager": "^5.1.0",
    "electron-prebuilt": "^0.36.0",
    "publish-release": "^1.1.0",
    "prettier": "^1.6.1"
  }
}
